<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hassan_shakoush">

    <application
        android:allowBackup="true"
        android:icon="@drawable/hassan_2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/hassan_2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">



        <activity
            android:name="com.example.hassan_shakoush.Splash"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.hassan_shakoush.Home"
            android:configChanges="orientation"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name="com.example.hassan_shakoush.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>